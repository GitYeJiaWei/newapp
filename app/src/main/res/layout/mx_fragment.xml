<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f7f7f7">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/topbg">
        <TextView
            android:id="@+id/tv_CurrentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额：0.00"
            android:textSize="@dimen/name3"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/btnMx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10"
            android:src="@mipmap/moreffffff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/topbg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/listviewbg"
            android:layout_marginRight="20dp">
             <LinearLayout
                 android:id="@+id/ll001"
                 android:layout_width="0dip"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:layout_height="match_parent"
                 android:background="@drawable/left_conner">
                 <TextView
                     android:id="@+id/txt001"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="系统对账"
                     android:layout_marginLeft="@dimen/margin5"
                     android:textColor="@color/title_bar_color"
                     android:textSize="@dimen/name2"/>
             </LinearLayout>
            <LinearLayout
                android:id="@+id/ll002"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银联对账"
                    android:layout_marginLeft="@dimen/margin5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>