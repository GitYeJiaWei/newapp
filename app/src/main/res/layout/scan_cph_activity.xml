<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <com.fosung.libeasypr.view.EasyPRPreView
        android:id="@+id/preSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_above="@+id/btnShutter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:text="如果识别错误请重新识别！"
        android:layout_marginBottom="@dimen/margin10"/>
    <Button
        android:id="@+id/btnShutter"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="识别车牌"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonokbg"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:text="请将车牌对准框内"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_below="@+id/title"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:src="@mipmap/leftarrow"/>
    <ImageView
        android:id="@+id/bgnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/right3"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin10">

    </ImageView>
</RelativeLayout>