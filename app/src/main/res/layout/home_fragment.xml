<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f7f7f7">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/topbg">
        <TextView
            android:id="@+id/tv_ChooseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-12"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/name2"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_CurrentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="福州市"
            android:textSize="@dimen/name3"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_CurrentName"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:src="@mipmap/downarrow_nq"/>

        <ImageView
            android:id="@+id/btnDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:src="@mipmap/qrcode_fffff" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp" >
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="bottom"
                    android:background="#33000000"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无图片"
                        android:textColor="@android:color/white" />

                    <LinearLayout
                        android:id="@+id/llDotTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:orientation="horizontal" >

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/llTempPay"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiaofei"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="停车缴费"
                        android:layout_marginLeft="@dimen/margin5"
                        android:textColor="@color/txt_color_gray"
                        android:textSize="@dimen/name2"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:layout_height="match_parent"
                    android:background="#f2f2f2"></View>

                <LinearLayout
                    android:id="@+id/llRecord"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/record01"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="停车记录"
                        android:layout_marginLeft="@dimen/margin5"
                        android:textColor="@color/txt_color_gray"
                        android:textSize="@dimen/name2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llParking"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/titleimg44"/>
                <LinearLayout
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约车位"
                        android:textColor="@color/txt_color_gray"
                        android:textSize="@dimen/name3"/>
                    <TextView
                        android:layout_marginTop="@dimen/margin5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约停车场共享停车位"
                        android:textColor="@color/txt_color_gray"
                        android:textSize="@dimen/name2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin10"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/rlMap"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="1dp"
                        android:background="#f2f2f2"></View>
                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin10"
                        android:src="@mipmap/parking32"/>
                    <TextView
                        android:layout_toRightOf="@+id/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近停车场"
                        android:layout_marginLeft="@dimen/margin5"
                        android:textColor="@color/txt_color_gray"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/name2"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin10"
                        android:src="@mipmap/more48"/>
                </RelativeLayout>

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/dmapView"
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true">
                </com.baidu.mapapi.map.MapView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>